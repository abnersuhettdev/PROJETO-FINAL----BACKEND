{
	"name": "todos-api-node-ts",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.17",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.3",
		"@types/uuid": "^9.0.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	},
	"scripts": {
		"dev": "tsnd --respawn --transpile-only ./src/server.ts",
		"build": "yarn tsc",
		"start": "node ./dist/server.js",
		"migration:create": "yarn typeorm migration:create ./src/database/migrations/NomeMigration",
		"migration:run": "yarn typeorm-ts-node-commonjs migration:run -d dist/database/typeorm.js",
		"migration:revert": "yarn typeorm-ts-node-commonjs migration:revert -d src/database/typeorm.js",
		"migration:prod": "cross-env NODE_ENV=production yarn typeorm migration:run -d dist/database/typeorm.js"
	}
}
